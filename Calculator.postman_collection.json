  "item": [
    {
      "name": "Auth - Get JWT",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/auth/token",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "token"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "if (data && data.token) {",
              "  pm.environment.set(\"jwt_token\", data.token);",
              "  console.log(\"JWT token saved to environment\");",
              "} else {",
              "  console.warn('No token field found in response');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Calculator - Add",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          },
          {
            "key": "X-Operation",
            "value": "add",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"number1\": 10, \"number2\": 5 }"
